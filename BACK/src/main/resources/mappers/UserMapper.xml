<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.ssafit.model.dao.UserDao">
	<select id="selectAll" resultType="User">
		SELECT * FROM user
	</select>
	
	<insert id="insertUser" parameterType="User">
		INSERT INTO user (id, password, name, email, nickname)
		VALUES (#{id}, #{password}, #{name}, #{email}, #{nickname})
	</insert>
	
	<select id="selectOne" parameterType="string" resultType="User">
		SELECT *
		FROM user
		WHERE id = #{id}
	</select>
	
	<select id="selectById" parameterType="int" resultType="User">
		SELECT *
		FROM user
		WHERE id = #{id}
	</select>
	
	<update id="updateUser" parameterType="User">
		UPDATE user
		SET id = #{id}, password = #{password}, name = #{name}, email = #{email}, nickname = #{nickname}
		WHERE user_id = #{user_id};
	</update>
	
	<insert id="insertMyPage" parameterType="MyPage">
		INSERT INTO mypage (age, gender, self_intro, address, fav_sport, user_id, profile_image)
		VALUES (#{age}, #{gender}, #{self_intro}, #{address}, #{fav_sport}, #{user_id}, #{profile_image})
	</insert>
	<!-- 폼 입력받을 때 고르는 걸로 (radio?)  -->
	
